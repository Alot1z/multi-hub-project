{
  "repository": "https://github.com/Alot1z/multi-hub-deploy-status",
  "branch": "main",
  "deployTarget": "netlify",
  "siteUrl": "https://multi-hub-deploy-status.netlify.app",
  "buildCommand": "echo 'Static site - no build required'",
  "publishDirectory": ".",
  "environmentVariables": {
    "NODE_VERSION": "18"
  },
  "redirects": [
    {
      "from": "/deploy-status/:service",
      "to": "/service-detail.html?service=:service",
      "status": 200
    }
  ],
  "headers": {
    "/*": {
      "X-Frame-Options": "DENY",
      "X-Content-Type-Options": "nosniff",
      "X-XSS-Protection": "1; mode=block",
      "Referrer-Policy": "strict-origin-when-cross-origin"
    }
  }
}
